.vertical-center
  .container
    .row
      .col-md-4.col-md-offset-4
        %h1 Update password
        = form_for @user, url: password_reset_path(params[:id]), html: {role: 'form'} do |f|
          = render 'shared/error_messages', object: f.object
          = hidden_field_tag :email, @user.email
          .form-group
            = f.password_field :password, placeholder: 'Password', class: 'form-control'
          .form-group
            = f.password_field :password_confirmation, placeholder: 'Re-enter Password', class: 'form-control'
          = f.submit 'Sign up', class: 'btn btn-large btn-primary'
